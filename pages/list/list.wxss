page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.top{
width: 390px;
height: 36px;
line-height: 20px;
background-color: rgba(255,255,255,1);
color: rgba(16,16,16,1);
font-size: 14px;
text-align: center;
box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.1);
font-family: Roboto;
display: flex;
  
}
.search{
  width: 30rpx;
  height: 30rpx;
}

.searchtext{
line-height: 14px;
color: rgba(206,206,206,1);
font-size: 10px;
position: relative;
top: 10rpx;
left: 45rpx;

}
.top image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 25rpx;
  margin-top: 5rpx;
}

.topborder{
width: 201px;
height: 25px;
border-radius: 8px;
box-shadow: 0px 2px 6px 0px rgba(0,0,0,0.07);
display: flex;
margin-left:110rpx ;
}